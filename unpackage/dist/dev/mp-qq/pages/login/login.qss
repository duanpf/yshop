.login {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #73cbb6;
}
.login .icon {
    position: fixed;
    top: 100rpx;
    left: 50%;
    margin-left: -70rpx;
}
.login .icon .image {
      width: 140rpx;
      height: 140rpx;
}
.login .form-box {
    position: fixed;
    top: 350rpx;
    left: 50%;
    width: 650rpx;
    background-color: #FFFFFF;
    text-align: center;
    margin-left: -325rpx;
    padding: 30rpx 0;
    border-radius: 20rpx;
    z-index: 10;
}
.login .form-box .title {
      font-size: 32rpx;
      font-weight: bold;
      padding: 10rpx 0;
      border-bottom: 4rpx solid #ff5500;
}
.login .form-box .form {
      margin: 40rpx;
}
.login .form-box .form .input {
        display: -webkit-box;
        display: -webkit-flex;
        display: flex;
        padding: 10rpx 0;
        margin: 30rpx 0;
        border-bottom: 1px solid #F1F1F1;
}
.login .form-box .form .input image {
          width: 48rpx;
          height: 48rpx;
}
.login .form-box .form .input input {
          padding-left: 20rpx;
          text-align: left;
}
.login .form-box .form .btn-login {
        margin-top: 40rpx;
        height: 80rpx;
        border-radius: 60rpx;
        line-height: 80rpx;
        color: #FFFFFF;
        font-size: 32rpx;
        font-weight: bold;
        background: -webkit-gradient(linear, left top, right top, from(#f35447), to(#ff8e3c));
        background: -webkit-linear-gradient(left, #f35447 0, #ff8e3c);
        background: linear-gradient(90deg, #f35447 0, #ff8e3c);
        background: -moz-linear-gradient(to right, #f35447 0, #ff8e3c 100%);
}
.login .form-box .to-reg {
      font-size: 30rpx;
      color: #d3d3d3;
}
.login .form-box .to-reg text {
        color: #73cbb6;
}
.login .dc {
    position: fixed;
    background-color: #F0AD4E;
    left: 50%;
    border-radius: 8rpx;
    opacity: .5;
}
.login .dc1 {
    width: 600rpx;
    height: 40rpx;
    margin-left: -300rpx;
    z-index: 9;
    top: 843rpx;
}
.login .dc2 {
    width: 550rpx;
    height: 60rpx;
    margin-left: -275rpx;
    z-index: 9;
    top: 833rpx;
}
.login .dc3 {
    width: 500rpx;
    height: 60rpx;
    margin-left: -250rpx;
    z-index: 9;
    top: 843rpx;
}

